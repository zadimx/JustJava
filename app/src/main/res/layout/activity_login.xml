<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fonted"
    tools:context="com.example.android.justjava.LoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/logo_screen" />


    <!--<TextView-->
        <!--android:id="@+id/textView"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginBottom="28dp"-->
        <!--android:layout_marginEnd="141dp"-->
        <!--android:layout_marginStart="141dp"-->
        <!--android:fontFamily="@font/cuprum_bold"-->
        <!--android:text="Вход в систему"-->
        <!--android:textSize="20sp"-->
        <!--app:layout_constraintBottom_toTopOf="@+id/editText2"-->
        <!--app:layout_constraintEnd_toEndOf="parent"-->
        <!--app:layout_constraintHorizontal_bias="0.488"-->
        <!--app:layout_constraintStart_toStartOf="parent" />-->

    <EditText
        android:id="@+id/editTextIdDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:ems="15"
        android:fontFamily="@font/cuprum_regular"
        android:hint="Логин"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/colorTextPrimary"
        android:textSize="15sp"
        android:theme="@style/MyEditTextTheme" />

    <EditText
        android:id="@+id/editTextPassDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:fontFamily="@font/cuprum_regular"
        android:hint="@string/pass"
        android:inputType="textPassword"
        android:textColorHint="@color/colorTextPrimary"
        android:textSize="15sp"
        android:theme="@style/MyEditTextTheme"
        android:layout_below="@+id/editTextIdDevice"
        android:layout_centerHorizontal="true" />

    <FrameLayout
        android:id="@+id/imageButton5"
        android:layout_width="284dp"
        android:layout_height="42dp"
        android:layout_below="@+id/editTextPassDevice"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/myButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/cuprum_regular"
            android:text="ВОЙТИ"
            android:textColor="@color/white" />
    </FrameLayout>

</RelativeLayout>
