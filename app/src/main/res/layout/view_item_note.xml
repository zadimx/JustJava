<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="4dp"
    android:layout_marginStart="4dp"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/mini_header_pokazateli"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/number_truck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pass"
                android:textColor="@color/white"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/cuprum_regular"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/name_driver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pass"
                android:textColor="@color/white"
                android:fontFamily="@font/cuprum_regular"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textSize="20sp" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/button_map"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/marker"/>
            </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:padding="30dp">

            <TextView
                android:id="@+id/axis1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/cuprum_bold"
                android:layout_alignParentTop="true"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:text="111" />

            <TextView
                android:id="@+id/axis_mid_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/cuprum_bold"
                android:layout_alignParentTop="true"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:text="121" />

            <TextView
                android:id="@+id/axis2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/cuprum_bold"
                android:textColor="@color/blue"
                android:layout_alignParentTop="true"
                android:textSize="20sp"
                android:text="222" />

            <TextView
                android:id="@+id/axis_mid_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/cuprum_bold"
                android:layout_alignParentBottom="true"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:text="343" />

            <TextView
                android:id="@+id/axis3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textColor="@color/blue"
                android:fontFamily="@font/cuprum_bold"
                android:layout_alignParentLeft="true"
                android:textSize="20sp"
                android:text="333" />

            <TextView
                android:id="@+id/axis4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textColor="@color/blue"
                android:fontFamily="@font/cuprum_bold"
                android:textSize="20sp"
                android:layout_alignParentRight="true"
                android:text="444" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/icon_phone"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/phone_pokazateli"/>
        </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>