<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/log_refresh_rv"
    tools:context="com.example.android.justjava.log.TableLogActivity"
    android:background="@color/milk">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/black_overlay"
            android:fontFamily="@font/cuprum_bold"
            android:textSize="20sp"
            android:padding="7dp"
            android:text="Дата и время" />
        <TextView
            android:id="@+id/label_axis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cuprum_bold"
            android:layout_alignParentLeft="true"
            android:textColor="@color/black_overlay"
            android:textSize="20sp"
            android:padding="7dp"
            android:text="Давление на осях автомобиля" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/log_rv"
            android:layout_below="@+id/label_axis"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>
</android.support.v4.widget.SwipeRefreshLayout>