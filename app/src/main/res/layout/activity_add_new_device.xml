<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fonted"
    tools:context=".AddNewDeviceActivity">
    <EditText
        android:id="@+id/editTextIdDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:ems="15"
        android:fontFamily="@font/cuprum_regular"
        android:hint="ID устройства"
        android:inputType="numberDecimal"
        android:textColorHint="@color/colorTextPrimary"
        android:textSize="15sp"
        android:theme="@style/MyEditTextTheme" />

    <EditText
        android:id="@+id/editTextPassDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:fontFamily="@font/cuprum_regular"
        android:hint="@string/pass"
        android:inputType="textPassword"
        android:textColorHint="@color/colorTextPrimary"
        android:textSize="15sp"
        android:theme="@style/MyEditTextTheme"
        android:layout_below="@+id/editTextIdDevice"
        android:layout_centerHorizontal="true" />

    <FrameLayout
        android:id="@+id/imageButton5"
        android:layout_width="284dp"
        android:layout_height="42dp"
        android:layout_below="@+id/editTextPassDevice"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/buttonConnect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/cuprum_regular"
            android:text="ПОДКЛЮЧИТЬ"
            android:textColor="@color/white" />
    </FrameLayout>
</RelativeLayout>